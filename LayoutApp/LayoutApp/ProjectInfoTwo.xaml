    <ContentPage Title="Контакты">
        <ScrollView>
            <FlexLayout  Direction="Column" >
                <Entry x:Name="ELogin" BackgroundColor="Gray"
                Text="{Binding UserLogin}"
                Placeholder="Email"
                TextColor="White" 
                HeightRequest="55" 
                HorizontalTextAlignment="Center" Margin="30, 70, 30, 0"/>

                <Entry x:Name="EMail" 
                Text="{Binding UserEmail}"
                Placeholder="Login"
                IsPassword="True" 
                Background="gray"
                HeightRequest="55" 
                HorizontalTextAlignment="Center"
                TextColor="White" Margin="30, 50, 30, 0"/>
                <Entry x:Name="EPassword" 
               
                Placeholder="Number"
                 Text="{Binding UserNumber}"
                IsPassword="True" 
                Background="gray"
                HeightRequest="55" 
                HorizontalTextAlignment="Center"
                TextColor="White" Margin="30, 50, 30, 0"/>
                <Entry x:Name="EPasswordReturn" 
                
                Placeholder="Address"
                Text="{Binding UserAddress}"
                IsPassword="True" 
                Background="gray"
                HeightRequest="55" 
                HorizontalTextAlignment="Center"
                TextColor="White" Margin="30, 50, 30, 0"/>
            </FlexLayout>
        </ScrollView>
