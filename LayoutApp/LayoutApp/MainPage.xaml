<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutApp.MainPage">
    <ScrollView>

        <FlexLayout Direction="Column" JustifyContent="SpaceAround" AlignContent="Center" >
            <StackLayout >
                <Image Source="https://st2.depositphotos.com/4209875/6163/i/950/depositphotos_61634017-stock-photo-grand-island-east-channel-lighthouse.jpg" HorizontalOptions="Center" HeightRequest="200" WidthRequest="200"/>
            </StackLayout>
            
            <StackLayout Margin="30">    
                <Entry x:Name="ELogin" BackgroundColor="Gray"
                    Text="{Binding UserLogin}"
                    Placeholder="Login"
                    TextColor="White" 
                    HeightRequest="55" 
                    HorizontalTextAlignment="Center"/>
                <Entry x:Name="EPassword"
                    Text="{Binding UserPassword}"
                    Placeholder="Password"
                    IsPassword="True" 
                    Background="gray"
                    HeightRequest="55" 
                    HorizontalTextAlignment="Center"
                    TextColor="White"/>
                <FlexLayout Direction="Row" JustifyContent="SpaceBetween">
                    <Button x:Name="BReg" Text="Зарегистроваться" 
                        HeightRequest="55" WidthRequest="140" Clicked="BReg_Clicked"/>
                    <Button x:Name="BLogin" Text="Войти" FlexLayout.AlignSelf="End" 
                        HeightRequest="55" WidthRequest="140" Clicked="BLogin_Clicked"/>
                </FlexLayout>
            </StackLayout>
        </FlexLayout>
    </ScrollView>
</ContentPage>
